<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/progress_hud_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="15dp">

    <com.example.zzbmi.dzfnewcore.dzf.dialog.ProgressWheel
        android:id="@+id/progress_wheel"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        wheel:matProg_barColor="@color/progress_color"
        wheel:matProg_barWidth="2.5dp"
        wheel:matProg_rimWidth="2.5dp"
        wheel:matProg_rimColor="@color/lightGrey"
        wheel:matProg_progressIndeterminate="true" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加载中..."
        android:visibility="visible"
        android:layout_marginTop="2dp"
        android:textSize="14sp"
        android:textColor="#FFFFFF" />

</LinearLayout>
